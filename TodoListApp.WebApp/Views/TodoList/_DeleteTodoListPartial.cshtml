@model TodoListApp.WebApp.Models.TodoList.TodoListModel

<form asp-controller="TodoList"
      asp-action="DeleteConfirmed"
      asp-route-todoListId="@Model.Id"
      id="deleteTodoListForm"
      method="post">
    @Html.AntiForgeryToken()

    <div class="text-center mb-4">
        <div class="text-danger mb-2">
            <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        </div>
        <p class="mb-1">Delete list <strong>"@Model.Title"</strong>?</p>
        <p class="text-muted small">This action cannot be undone.</p>
    </div>

    <div class="d-flex justify-content-end border-top pt-3">
        <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            Delete
        </button>
    </div>
</form>