@model TodoListApp.WebApp.Models.TodoList.CreateTodoListModel

<form asp-controller="TodoList"
      asp-action="Create"
      id="createTodoListForm" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input id="Title" asp-for="Title" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Title" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea id="Description" asp-for="Description" class="form-control" rows="3" placeholder="Enter description (optional)"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-end border-top pt-3">
        <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create List</button>
    </div>
</form>