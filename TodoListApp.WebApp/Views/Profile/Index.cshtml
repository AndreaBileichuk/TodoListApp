@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TodoListApp.WebApp.Helpers
@model TodoListApp.WebApp.Models.UserProfileModel
@{
    ViewData["Title"] = "Мій профіль";
    Layout = "_Layout";
    var avatarUrl = Model.AvatarUrl ?? DefaultAvatars.DefaultAvatar;
}

<style>
    .profile-avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .profile-card {
        border-radius: 1rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-light shadow-sm p-4 profile-card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <img src="@avatarUrl" alt="Avatar" class="rounded-circle profile-avatar mb-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                                <i class="bi bi-camera me-1"></i> Змінити фото
                            </button>
                        </div>

                        <div class="col-md-8">
                            <h2 class="fw-bold mb-1">@Model.UserName</h2>
                            <p class="text-muted fs-5 mb-3">@Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-light shadow-sm p-4 profile-card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Змінити ім'я користувача</h5>
